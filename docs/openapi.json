{
  "openapi": "3.0.3",
  "info": {
    "title": "Todos Api 1.0",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "todos"
    }
  ],
  "paths": {
    "/todos": {
      "get": {
        "tags": [
          "todos"
        ],
        "description": "return all todos",
        "responses": {
          "200": {
            "description": "a list of todos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                },
                "examples": {
                  "response": {
                    "value": [
                      {
                        "name": "Golang",
                        "description": "Practice go language"
                      },
                      {
                        "name": "Clean Code By Uncle Bob",
                        "description": "Read The Whole Book, one chapter at a day"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "todos"
        ],
        "description": "create new todo",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Todo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "todo created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                },
                "examples": {
                  "TodoCreatedResponse": {
                    "$ref": "#/components/examples/TodoResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/todos/{name}": {
      "put": {
        "tags": [
          "todos"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "name",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Name of the todo"
          }
        ],
        "description": "update a todo",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Todo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "todo updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                },
                "examples": {
                  "TodoResponse": {
                    "$ref": "#/components/examples/TodoResponse"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "todos"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "name",
            "schema": {
              "type": "string"
            },
            "required": true,
            "example": "Golang",
            "description": "Name of the todo"
          }
        ],
        "description": "delete a todo",
        "responses": {
          "200": {
            "description": "todo deleted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                },
                "examples": {
                  "TodoResponse": {
                    "value": {
                      "code": 200,
                      "message": "deleted todo Golang"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Todo": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "examples": {
      "TodoExample": {
        "value": {
          "name": "Golang",
          "description": "Practice go language"
        }
      },
      "TodoResponse": {
        "value": {
          "code": 200,
          "data": {
            "name": "Golang",
            "description": "Practice go language"
          }
        }
      }
    }
  }
}